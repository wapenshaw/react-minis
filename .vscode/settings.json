{
	// General VSCode Settings
	"editor.renderIndentGuides": true,
	"npm.packageManager": "yarn", // Set to "npm" if you don't have yarn installed.
	"workbench.editor.labelFormat": "default", // Set to short if you want to see the foldername beside the filename in tabs
	"explorer.compactFolders": false, // New Folders and empty folders will always be expanded
	"typescript.tsdk": "node_modules\\typescript\\lib", // Use Typescript Version in the Workspace
	"debug.openExplorerOnEnd": true, // Whenever you stop the debug session, opens explorer view instead of staying in debug mode
	"problems.decorations.enabled": true, // Error highlighing in explorer view
	"files.autoSave": "off",
	"editor.semanticHighlighting.enabled": false, // Just so that when you have the dev server running, any focus change will save -> recompile

	"typescript.tsserver.maxTsServerMemory": 8192,

	"files.exclude": {
		"**/.DS_Store": true,
		"**/.git": true,
		"**/node_modules": false
	},
	"search.exclude": {
		"**/node_modules": true
	},

	"search.useReplacePreview": true,
	// Extension Specific settings
	"eslint.alwaysShowStatus": true,
	"helium-icon-theme.activeIconPack": "react_redux",

	"eslint.packageManager": "yarn",

	"editor.autoClosingBrackets": "languageDefined",
	"editor.autoClosingOvertype": "auto",

	// Fomatting Settings.
	"editor.defaultFormatter": "esbenp.prettier-vscode", // Set Prettier as the default formatter
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.organizeImports": false
	},

	"path-intellisense.extensionOnImport": false,

	"editor.renameOnType": true,
	"files.trimFinalNewlines": true,

	"editor.tokenColorCustomizations": {
		"[Mowgli]": {
			"textMateRules": [
				{
					"scope": "support.class.component",
					"settings": {
						"foreground": "#FF97A3"
					}
				},
				{
					"scope": "variable.other.readwrite",
					"settings": {
						"foreground": "#FCFCA0"
					}
				}
			]
		}
	}
}
